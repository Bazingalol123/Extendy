{
"compilerOptions": {
"target": "ES2020",
"lib": ["ES2020", "DOM"],
"module": "ESNext",
"jsx": "react-jsx",
"moduleResolution": "bundler",
"strict": true,
"resolveJsonModule": true,
"skipLibCheck": true,
"baseUrl": ".",
"paths": {
"@/components/*": ["src/components/*"],
"@/utils/*": ["src/utils/*"],
"@/hooks/*": ["src/hooks/*"]
}
},
"include": ["src", "popup.html", "options.html", "vite.config.ts"]
}